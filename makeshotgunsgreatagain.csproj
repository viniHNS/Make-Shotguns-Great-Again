<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>makeshotgunsgreatagain</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>ViniHNS</Authors>
    <Copyright>© ViniHNS</Copyright>
    <OutputType>Library</OutputType>
    <Version>1.12.0</Version>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="makeshotgunsgreatagain-client\**" />
    <EmbeddedResource Remove="makeshotgunsgreatagain-client\**" />
    <None Remove="makeshotgunsgreatagain-client\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SPTarkov.Common" Version="4.0.3" />
    <PackageReference Include="SPTarkov.DI" Version="4.0.3" />
    <PackageReference Include="SPTarkov.Server.Core" Version="4.0.3" />
    <PackageReference Include="WTT-ServerCommonLib" Version="2.0.15" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="db\CustomItems\*.json" />
  </ItemGroup>

  <Target Name="PackageModForDistribution" AfterTargets="Build" Condition=" '$(Configuration)' == 'Release' ">
    <PropertyGroup>
      <ModName>$(AssemblyName)</ModName>
      <ModVersion>$(Version)</ModVersion>
      <ZipFileName>$(ModName).zip</ZipFileName>
      <TempPackageDir>$(ProjectDir)obj/Package</TempPackageDir>
      <ModPackageDir>$(TempPackageDir)/SPT/user/mods/$(ModName)</ModPackageDir>
      <BepInExPluginsDir>$(TempPackageDir)/BepInEx/plugins</BepInExPluginsDir>
    </PropertyGroup>

    <Message Text="--- Iniciando empacotamento do Mod para distribuição ---" Importance="high" />

    <RemoveDir Directories="$(TempPackageDir)" />
    <MakeDir Directories="$(ModPackageDir)" />
    <MakeDir Directories="$(BepInExPluginsDir)" />

    <MSBuild Projects="$(ProjectDir)makeshotgunsgreatagain-client\makeshotgunsgreatagain.csproj" Properties="Configuration=Release;Platform=AnyCPU" Targets="Build" />

    <Copy SourceFiles="$(ProjectDir)makeshotgunsgreatagain-client\bin\Release\netstandard2.1\makeshotgunsgreatagain.dll" DestinationFolder="$(BepInExPluginsDir)" />

    <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(ModPackageDir)" />
    <Copy SourceFiles="$(ProjectDir)bundles.json" DestinationFolder="$(ModPackageDir)" />

    <ItemGroup>
      <BundleFiles Include="bundles\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(BundleFiles)" DestinationFolder="$(ModPackageDir)\bundles\%(RecursiveDir)" />

    <ItemGroup>
      <DbFiles Include="db\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(DbFiles)" DestinationFolder="$(ModPackageDir)\db\%(RecursiveDir)" />

    <ZipDirectory
                  SourceDirectory="$(TempPackageDir)"
                  DestinationFile="$(ProjectDir)$(ZipFileName)"
                  Overwrite="true" />

    <RemoveDir Directories="$(TempPackageDir)" />

    <Message Text="--- Mod empacotado com sucesso em: $(ProjectDir)$(ZipFileName) ---" Importance="high" />
  </Target>

</Project>